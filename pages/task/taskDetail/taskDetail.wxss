/* pages/work/taskdetail/taskdetail.wxss */

.content {
  color: #666;
}

.iconfont {
  font-size: 34rpx;
}

.detail-mid {
  padding: 20rpx;
  background-color: #fff;
}

.mid-content {
  display: flex;
}

.mid-left {
  flex: 1;
}

.mid-right {
  width: 110rpx;
  height: 110rpx;
}

.pic {
  width: 100%;
  height: 100%;
}

.line-height-50 {
  line-height: 50rpx;
}

.title {
  color: #999;
}

.yellow-content {
  color: #ff9003;
}

.detail-work-type {
  color: #1a9df8;
  border: 1rpx solid #1a9df8;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.detail-work-desc {
  color: #27d693;
  border: 1rpx solid #27d693;
  border-radius: 10rpx;
  background-color: #e1f8f0;
}

.text-label {
  margin-right: 20rpx;
  font-size: 26rpx;
  display: inline-block;
  padding: 5rpx 15rpx;
  line-height: 28rpx;
  height: 30rpx;
}

.green-color {
  color: #27d693;
}

.pic_item {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.pic_cell {
  width: 32%;
  padding: 0 0.66%;
  height: 150rpx;
  margin-top: 10rpx;
}

.choose {
  display: block;
  width: 100%;
  height: 100%;
}

.detail-bottom {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.cancel_bid {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: transparent;
}

.btn {
  background-color: #ff9003;
  border-radius: 35rpx;
  width: 40%;
  margin: 0 auto;
  text-align: center;
  height: 75rpx;
  line-height: 75rpx;
  color: #fff;
  font-size: 32rpx;
}

.space {
  height: 20rpx;
  background-color: transparent;
  margin-bottom: 100rpx;
}

.cancel-position {
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

.cancel-box {
  position: absolute;
  top: 0rpx;
  padding-bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
  height: 400rpx;
}

.box-shadow {
  box-shadow: 0 -10rpx 20rpx #ccc;
}

.cancel-content {
  padding: 20rpx;
  background-color: #fff;
}

.cancel-title {
  text-align: center;
  line-height: 50rpx;
  font-size: 32rpx;
  height: 50rpx;
}

.notice {
  text-align: center;
  color: #ff9003;
  line-height: 50rpx;
  height: 50rpx;
}

.reason {
  margin: 10rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 10rpx;
  height: 105rpx;
}

.textarea {
  width: 100%;
  height: 100%;
}

.height-20 {
  height: 20rpx;
  background-color: #efeff4;
}

.btn-box {
  display: flex;
}

.btn-default {
  height: 100rpx;
  line-height: 100rpx;
  width: 50%;
  font-size: 34rpx;
  text-align: center;
  flex: 1;
  background-color: #fff;
}

.btn-confirm {
  background-color: #27d693;
  color: #fff;
}

.operation {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #27d693;
  color: #fff;
  line-height: 100rpx;
  display: flex;
}

.op-btn {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
}

.bg-white {
  background-color: #fff;
  color: #27d693;
}

.font-gray {
  background-color: #27d693;
  color: #333;
}

.icon-dianhua {
  font-size: 40rpx;
}

.font-normal {
  font-size: 32rpx;
}

.icon-jilu1 {
  margin-top: -10px;
}

.blue-color {
  color: #1a9df8;
  width: 110rpx;
  padding-left: 80rpx;
  text-align: center;
}

.line-height-45 {
  line-height: 45rpx;
}

/* 投标师傅信息 */

.bid_master {
  margin: 25rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.master_info {
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
}

.master-headimg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.master-headimg image {
  width: 100%;
  height: 100%;
}

.master_cell {
  padding-left: 30rpx;
  flex: 1;
}

.master {
  height: 60rpx;
  line-height: 60rpx;
}

.master_btn {
  border-top: 1rpx solid #e6e6e6;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  font-size: 30rpx;
}

.bid_btn {
  text-align: center;
  flex: 1;
}

.green {
  background-color: #27d693;
}

.gary {
  background-color: #57e7b5;
}

/* pages/task/step1/step1.wxss */
page{
  color: #555555;
}
.choose-category{
  display: flex;
  background: #fff;
  box-sizing: border-box;
  height: 80rpx;
}
.category{
  flex: 1;
  line-height:80rpx;
  position: relative;
  display: flex;
}
.task-detail{
  width: 100%;
  box-sizing: border-box;
  padding: 15rpx 30rpx ;
}
.blue{
  color: #27D693;
}
.work_property{
  text-align: center;
  margin: 0 auto;
  width: 30%;
  justify-content: center;
}
.active::after{
  content: "";
  position: absolute;
  width: 30%;
  height: 5rpx;
  display: block;
  background: #27D693;
  margin: 0 auto;
}
.point-work{
  padding: 0 30rpx;
  background: #fff;
  border-top: 1rpx solid #E0E0E0;
}
.taskInfo{
  padding: 15rpx 0 ;
  display: flex;
}
.work-time{
  display: flex;
  align-items: center;
  width: 200rpx;
  text-align: center;
}
.class-category{
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}
.day-shift{
  padding: 20rpx 0 20rpx 0;
}
.night-shift{
  padding: 20rpx 0 20rpx 0;
}
.day-flex{
  flex: 1;
  display: flex;
  align-items: center;
}
radio{ 
  transform:scale(.6)  
}
.check-time{
  margin-bottom: 4rpx;
}
.input-addon{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
}
.padding{
  padding: 20rpx;
}
.input-group-addon{
  width: 49rpx;
  height: 49rpx;
  border-radius: 50%;
  border: 1px solid #B7B7B7;
}
.text{
  width: 190rpx;
  height: 70rpx;
  border-radius: 100rpx;
  text-align: center;
  border: 1px solid #F3F3F3;
}
.plus::before{
  content: '';
  display: block;
  width: 28rpx;
  background-color:#999999; 
  height: 4rpx;
  position: relative;
  top: 50%;
  left: 50%;
  margin-left: -14rpx;
  margin-top: -2rpx
}
.reduce{
  background: #27D693;
  border: 1px solid #27D693;
}
.reduce::before{
  content: '';
  display: block;
  width: 28rpx;
  background-color:#ffffff; 
  height: 6rpx;
  position: relative;
  top: 50%;
  left: 50%;
  margin-left: -14rpx;
  margin-top: -3rpx
}
.reduce::after{
  content: '';
  display: block;
  width: 28rpx;
  background-color:#ffffff; 
  height: 6rpx;
  position: relative;
  top: 50%;
  left: 50%;
  transform: rotate(90deg);
  margin-left: -14rpx;
  margin-top: -3rpx
}
.point-submit{
  width:40%;
  height: 100rpx;
  margin: 50rpx auto;
  background: #27D693;
  line-height: 100rpx;
  border: 0;
  color: #fff;
  border-radius: 100rpx;
}
.point-textaera{
  margin-top: 20rpx;
}
.describe{
  padding: 30rpx 0;
}
.work_pic{
  padding: 50rpx 30rpx 40rpx;
}
.pic_text{
  padding-bottom: 20rpx;
}
.pic_item{
  display: flex;
  flex-wrap: wrap;
}
.pic_cell{
  width: 150rpx;
  height: 150rpx;
  margin-right:80rpx;
}
.choose{
  display: block;
  width: 100%;
  height: 100%;
}
.upload_pic{
  width: 150rpx;
  height: 150rpx;
}
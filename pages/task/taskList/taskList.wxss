/* pages/task/taskList/taskList.wxss */
.content{
  width: 100%;
  height: 100%;
  color:#666;
}
.nav {
  display: flex;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 10;
}

.iconfont {
  font-size: 44rpx;
}

.nav-list {
  text-align: center;
  display: inline-block;
  flex: 1;
  width: 25%;
  box-sizing: border-box;
  border-right: 1rpx solid #f2f2f2;
  padding: 10rpx;
  font-size: 26rpx;
}

.last-nav-list {
  border-right: 0rpx;
}

.nav-normal{
  background-color: #fff;
  color: #bbb;
}
.nav-check {
  background-color: #27d693;
  color: #fff;
}
.padding-top-130{
   padding-top: 130rpx;
}
.list-box {
  height: 100%;
}

.list-content {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.mid-content {
  display: flex;
}

.mid-left {
  flex: 1;
}

.mid-right {
  width: 110rpx;
  height: 110rpx;
}

.pic {
  width: 100%;
  height: 100%;
}

.line-height-50 {
  line-height: 50rpx;
}

.title {
  color: #999;
}

.yellow-content {
  color: #ff9003;
}
.list-notice{
  padding-top: 10rpx;
  text-align: center;
  color: #999;
}
.detail-work-type {
  color: #1a9df8;
  border: 1rpx solid #1a9df8;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.detail-work-desc {
  color: #27d693;
  border: 1rpx solid #27d693;
  border-radius: 10rpx;
  background-color: #e1f8f0;
}

.text-label {
  margin-right: 20rpx;
  font-size: 26rpx;
  display: inline-block;
  padding: 5rpx 15rpx;
  line-height: 28rpx;
  height: 30rpx;
}

.line-height-50 {
  line-height: 50rpx;
}

.bottom-border {
  margin-bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.top-border {
  border-top: 1rpx solid #e0e0e0;
}
.empty-pic {
  width: 258rpx;
  height: 208rpx;
  background-image: url("http://uploads.anzhuangdashi.com/task_empty.png");
  background-size: cover;
  margin: 45% auto 0
}
.line-height-45{
  line-height:45rpx;
}